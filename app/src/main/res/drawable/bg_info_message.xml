<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Arka plan rengi (colors.xml'den gelecek) -->
    <solid android:color="@color/info_message_background_color" />

    <!-- Köşe yuvarlaklığı -->
    <corners android:radius="8dp" />

    <!-- İç boşluklar (padding) - TextView'ın kendi padding'i de kullanılabilir -->
    <!-- Bu padding'ler TextView'ın kendi padding'i ile birlikte çalışır.
         Eğer TextView'a özel padding verdiyseniz, buradakiler eklenir.
         Genellikle birini kullanmak yeterlidir. Şimdilik TextView'ın padding'ine bırakabiliriz.
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
    -->
</shape>